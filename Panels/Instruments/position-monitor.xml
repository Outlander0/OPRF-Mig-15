          <offset>27</offset>
        </transformation>
      </transformations>
    </layer>

<!-- ALTITUDE -->
<!-- Altitude Title -->
    <layer>
      <name>Title</name>
      <type>text</type>
      <point-size>9</point-size>
      <color>
        <red>1</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>Altitude:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-53</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>15</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Altitude (AH Disengaged) -->
    <layer>
      <name>Altitude (AH Disengaged)</name>
      <condition>
        <not-equals>
          <property>/autopilot/locks/altitude</property>
          <value>altitude-hold</value>
        </not-equals>
      </condition>
      <type>text</type>
      <font>led</font>
      <point-size>4</point-size>
      <color>
        <red>1</red>
        <green>1</green>
        <blue>1</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property>/position/altitude-ft</property>
          <format>%09.3f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-5</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>15</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Altitude (AH Engaged) >= target-altitude -->
    <layer>
      <name>Altitude (AH Engaged) GTE target-altitude-ft</name>
      <condition>
        <and>
          <equals>
            <property>/autopilot/locks/altitude</property>
            <value>altitude-hold</value>
          </equals>
          <greater-than-equals>
            <property>/position/altitude-ft</property>
            <property>/autopilot/settings/target-altitude-ft</property>
          </greater-than-equals>
        </and>
      </condition>
      <type>text</type>
      <font>led</font>
      <point-size>4</point-size>
      <color>
        <red>0.4</red>
        <green>1</green>
        <blue>0.4</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property>/position/altitude-ft</property>
          <format>%09.3f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-5</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>15</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Altitude (AH Engaged) < target-altitude -->
    <layer>
      <name>Altitude (AH Engaged) LT target-altitude-ft</name>
      <condition>
        <and>
          <equals>
            <property>/autopilot/locks/altitude</property>
            <value>altitude-hold</value>
          </equals>
          <less-than>
            <property>/position/altitude-ft</property>
            <property>/autopilot/settings/target-altitude-ft</property>
          </less-than>
        </and>
      </condition>
      <type>text</type>
      <font>led</font>
      <point-size>4</point-size>
      <color>
        <red>1</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property>/position/altitude-ft</property>
          <format>%09.3f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-5</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>15</offset>
        </transformation>
      </transformations>
    </layer>

