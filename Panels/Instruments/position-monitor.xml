<?xml version="1.0"?>

<!--

-->

<PropertyList>

  <name>Position Monitor</name>
  <w-base>110</w-base>
  <h-base>120</h-base>

  <layers>
<!-- Background -->
    <layer>
      <name>background</name>
      <texture>
        <path>Aircraft/MiG-15/Panels/Instruments/Textures/trans-dgrey-bg.rgb</path>
      </texture>
      <w>110</w>
      <h>120</h>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>0</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>0</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Title -->
    <layer>
      <name>Title</name>
      <type>text</type>
      <point-size>10</point-size>
      <color>
        <red>1</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>POS Monitor      X</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-53</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>51</offset>
        </transformation>
      </transformations>
    </layer>

<!-- LAT -->
<!-- Latitude Title -->
    <layer>
      <name>Title</name>
      <type>text</type>
      <point-size>9</point-size>
      <color>
        <red>1</red>
        <green>1</green>
        <blue>0</blue>
      </color>
      <chunks>
        <chunk>
          <type>literal</type>
          <text>Lat:</text>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>-53</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>39</offset>
        </transformation>
      </transformations>
    </layer>

<!-- Latitude -->
    <layer>
      <name>Latitude</name>
      <type>text</type>
      <font>led</font>
      <point-size>4</point-size>
      <color>
        <red>1</red>
        <green>1</green>
        <blue>1</blue>
      </color>
      <chunks>
        <chunk>
          <type>number-value</type>
          <property>/position/latitude-deg</property>
          <format>%08.3f</format>
        </chunk>
      </chunks>
      <transformations>
        <transformation>
          <type>x-shift</type>
          <offset>1</offset>
        </transformation>
        <transformation>
          <type>y-shift</type>
          <offset>39</offset>
        </transformation>
      </transformations>
    </layer>

