  <animation>
    <type>rotate</type>
    <object-name>GI_RVern</object-name>
    <property>instrumentation/gear-indicator/red-pos-norm</property>
    <interpolation>
      <entry><ind>0.0</ind><dep>0.0</dep></entry>
      <entry><ind>1.0</ind><dep>600</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0.050105</y-m>
      <z-m>0.01519</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>GI_GVern</object-name>
    <property>instrumentation/gear-indicator/green-pos-norm</property>
    <interpolation>
      <entry><ind>0.0</ind><dep>0.0</dep></entry>
      <entry><ind>1.0</ind><dep>600</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>-0.045077</y-m>
      <z-m>-0.015054</z-m>
    </center>  
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>GI_Switch</object-name>
    <property>instrumentation/gear-indicator/switch-pos-norm</property>
    <factor>0.009</factor>
    <axis>
      <x>0.0</x>
      <y>1</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>GI_BCheck</object-name>
    <property>instrumentation/gear-indicator/button-check/switch-pos-norm</property>
    <factor>0.004</factor>
    <axis>
      <x>-1</x>
      <y>0.0</y>
      <z>0.0</z>
    </axis>
  </animation>

  <animation>
    <type>pick</type>
    <object-name>GI_RUp</object-name>
    <action>
      <button>0</button>
      <repeatable>true</repeatable>
      <interval-sec>0.1</interval-sec>
      <binding>
        <command>property-adjust</command>
        <property>instrumentation/gear-indicator/red-pos-norm</property>
        <step>0.1</step>
        <min>0</min>
        <max>1</max>
        <wrap>false</wrap>
